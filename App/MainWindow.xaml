<Window x:Class="MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SentinelVision" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Margin="10">
            <Image Name="VideoDisplay" Stretch="Uniform" />
        </Border>
        <StackPanel Grid.Column="1" Margin="10">
            <ListBox Name="PeopleList" Height="200" />
            <Button Name="OpenDoorButton" Content="Open Door" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>